<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fris_blue">

    <TextView
        android:id="@+id/topBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleProfile"
        android:textColor="@color/fris_white"
        android:textSize="@dimen/headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/bigMargin"/>

    <ImageView
        android:id="@+id/search"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:layout_gravity="end"
        android:backgroundTint="@color/fris_blue"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/fris_white"
        android:layout_margin="@dimen/medMargin"/>

    <ImageView
        android:id="@+id/cart"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:backgroundTint="@color/fris_blue"
        android:src="@drawable/cart"
        app:layout_constraintEnd_toStartOf="@id/search"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/fris_white"
        android:layout_margin="@dimen/medMargin"/>

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:layout_gravity="center|start"
        android:backgroundTint="@color/fris_blue"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/fris_white"
        android:layout_margin="@dimen/medMargin"/>

</androidx.constraintlayout.widget.ConstraintLayout>