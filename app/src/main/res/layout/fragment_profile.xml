<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">


    <TextView
        android:id="@+id/favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/favoritePro"
        android:textSize="@dimen/headline"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/recipets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/favourites"
        android:text="@string/recieptsPro"
        android:textSize="@dimen/headline"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/recipets"
        android:text="@string/myPurchasesPro"
        android:textSize="@dimen/headline"
        android:textColor="@color/fris_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/purchases"
        android:text="@string/myAccountPro"
        android:textSize="@dimen/headline"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>