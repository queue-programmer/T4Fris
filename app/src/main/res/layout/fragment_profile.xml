<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:id="@+id/profile_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:text="Profil"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/profile_topbar"
        android:text="FAVORITTER"
        android:textSize="30sp"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/recipets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/favourites"
        android:text="KVITTERINGER"
        android:textSize="30sp"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/recipets"
        android:text="MINE KJÃ˜P"
        android:textSize="30sp"
        android:textColor="@color/fris_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/purchases"
        android:text="KONTO"
        android:textSize="30sp"
        android:textColor="@color/fris_blue"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>